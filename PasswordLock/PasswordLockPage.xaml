<Window x:Class="PasswordLock.PasswordLockPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordLock"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Button x:Name="checkPassword" Content="Check Password" HorizontalAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" Click="checkPassword_Click" IsDefault="True" Height="40" Width="120" FontSize="16"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" Width="120" Height="20"/>
        <Label x:Name="passwordLabel" Content="" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Foreground="Red" FontWeight="Bold" FontSize="16"/>
    </Grid>
</Window>
